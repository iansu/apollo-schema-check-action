{
  "name": "apollo-schema-check-action",
  "description": "A GitHub Action to run a schema check and post the results as a comment on a Pull Request",
  "version": "1.2.2",
  "author": "Ian Sutherland <ian@iansutherland.ca>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iansu/apollo-schema-check-action"
  },
  "main": "build/index.js",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "ts-node-dev --no-notify -- src/index.ts",
    "build": "NODE_ENV=production ncc build src/index.ts -o build --minify",
    "test": "jest",
    "clean": "rimraf build",
    "clean:modules": "rimraf node_modules",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "keywords": [
    "actions",
    "github",
    "apollo",
    "server",
    "schema",
    "check",
    "javascript",
    "typescript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint"
    ],
    "*.{ts,js,json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@octokit/action": "^3.15.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.0.1",
    "@types/jest-when": "^2.7.3",
    "@types/node": "^16.6.1",
    "@vercel/ncc": "0.29.0",
    "debug": "^4.3.2",
    "eslint": "^7.32.0",
    "eslint-config-neo": "^0.6.2",
    "execa": "^5.1.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-when": "^3.3.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "1.1.8",
    "typescript": "^4.3.5"
  }
}
